<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:fitsSystemWindows="true">
            
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                
                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/userphoto"
                    android:fitsSystemWindows="true"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/AppTheme.PopupOverlay"
                    app:titleTextColor="@color/white"
                    app:layout_collapseMode="pin" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- User Info Section -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_info_height"
                    android:paddingTop="@dimen/spacing_normal_16"
                    android:paddingBottom="@dimen/spacing_normal_16"
                    android:orientation="horizontal"
                    android:background="@color/grey">

                    <!-- Rating -->
                    <LinearLayout
                        style="@style/UserInfoBlock"
                        android:layout_weight="0.24">

                        <TextView
                            android:id="@+id/user_rating_tv"
                            style="@style/UserInfoText.Value"
                            android:text="15"/>

                        <TextView
                            style="@style/UserInfoText"
                            android:text="@string/user_info_rating"/>

                    </LinearLayout>

                    <View style="@style/UserInfoDivider" />

                    <!-- Code lines -->
                    <LinearLayout
                        style="@style/UserInfoBlock"
                        android:layout_weight="0.52">

                        <TextView
                            android:id="@+id/user_codelines_tv"
                            style="@style/UserInfoText.Value"
                            android:text="50000"/>

                        <TextView
                            style="@style/UserInfoText"
                            android:text="@string/user_info_codelines"/>

                    </LinearLayout>

                    <View style="@style/UserInfoDivider" />

                    <!-- Projects -->
                    <LinearLayout
                        style="@style/UserInfoBlock"
                        android:layout_weight="0.24">

                        <TextView
                            android:id="@+id/user_projects_tv"
                            style="@style/UserInfoText.Value"
                            android:text="5"/>

                        <TextView
                            style="@style/UserInfoText"
                            android:text="@string/user_info_projects"/>

                    </LinearLayout>

                </LinearLayout>


                <!-- User Items Section (Profile) -->

                <!-- Phone -->
                <LinearLayout style="@style/UserItemBlock">

                    <ImageView
                        style="@style/Icon.Left"
                        android:src="@drawable/ic_call_black_24dp"/>

                    <LinearLayout style="@style/UserItemTextWrapper">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/phone_et"
                                style="@style/UserItemEditText"
                                android:hint="@string/user_item_hint_phone"
                                android:inputType="phone"
                                android:text="+7 (909) 4xx-xx-xx "
                                android:enabled="false"
                                android:focusable="false" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/Icon.Right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>

                </LinearLayout>

                <View style="@style/UserItemDivider"/>

                <!-- E-mail -->
                <LinearLayout style="@style/UserItemBlock">

                    <ImageView
                        style="@style/Icon.Left"
                        android:src="@drawable/ic_email_black_24dp"/>

                    <LinearLayout style="@style/UserItemTextWrapper">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/email_et"
                                style="@style/UserItemEditText"
                                android:hint="@string/user_item_hint_email"
                                android:inputType="textEmailAddress"
                                android:text="trusov.public@gmail.com"
                                android:enabled="false"
                                android:focusable="false" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/Icon.Right"
                        android:src="@drawable/ic_send_black_24dp"/>

                </LinearLayout>

                <View style="@style/UserItemDivider"/>

                <!-- VK profile -->
                <LinearLayout style="@style/UserItemBlock">

                    <ImageView
                        style="@style/Icon.Left"
                        android:src="@drawable/vk_circle_24dp"/>

                    <LinearLayout style="@style/UserItemTextWrapper">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/vk_et"
                                style="@style/UserItemEditText"
                                android:hint="@string/user_item_hint_vk"
                                android:inputType="text"
                                android:text="vk.com/v.a.trusov"
                                android:enabled="false"
                                android:focusable="false" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/Icon.Right"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"/>

                </LinearLayout>

                <View style="@style/UserItemDivider"/>

                <!-- GitHub repository -->
                <LinearLayout style="@style/UserItemBlock">

                    <ImageView
                        style="@style/Icon.Left"
                        android:src="@drawable/github_circle_24dp"/>

                    <LinearLayout style="@style/UserItemTextWrapper">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/github_et"
                                style="@style/UserItemEditText"
                                android:hint="@string/user_item_hint_git"
                                android:inputType="textUri"
                                android:text="github.com/vtr-dev/DevIntensive"
                                android:enabled="false"
                                android:focusable="false" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/Icon.Right"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"/>

                </LinearLayout>

                <View style="@style/UserItemDivider"/>

                <!-- About me -->
                <LinearLayout style="@style/UserItemBlock">

                    <ImageView
                        style="@style/Icon.Left"
                        android:src="@drawable/ic_account_circle_24dp"/>

                    <LinearLayout style="@style/UserItemTextWrapper.Multiline">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/bio_et"
                                style="@style/UserItemEditText"
                                android:hint="@string/user_item_hint_about"
                                android:inputType="textMultiLine"
                                android:text="@string/lorem_ipsum"
                                android:enabled="false"
                                android:focusable="false" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
        
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            app:useCompatPadding="true"
            android:layout_marginRight="@dimen/fab_right_space"/>

    </android.support.design.widget.CoordinatorLayout>
    
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

